<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setting" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="재생속도"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TableRow>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="0.5배"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="0.75배"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="1.0배"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="1.25배"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="1.5배"
                />
        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="음소 조합 여부 선택"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <CheckBox /> <TextView android:text="지화 조합 안함"/>
            <CheckBox /> <TextView android:text="지화 조합"/>
        </TableRow>

    </TableLayout>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="음량조절"
        android:layout_marginTop="50dp"
        />
    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="블루투스 연결"
        android:layout_marginTop="50dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="왼손"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:text="CONNECT" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_left_red"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오른손"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:text="DISCONNECT"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_right_green" />









</LinearLayout>