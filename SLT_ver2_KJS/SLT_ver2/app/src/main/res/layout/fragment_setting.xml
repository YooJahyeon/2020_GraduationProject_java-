    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:text="환경설정" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:drawableLeft="@drawable/ic_fast_forward_black_24dp"
        android:text="재생속도" />


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.10배"
                    android:id="@+id/Button_010"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.50배"
                    android:id="@+id/Button_050"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.00배"
                    android:id="@+id/Button_100"
                    android:checked="true"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.50배"
                    android:id="@+id/Button_150"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.00배"
                    android:id="@+id/Button_200"/>
            </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="폰트 크기 조절"
        android:layout_marginTop="70dp"
        android:drawableLeft="@drawable/pen"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Font Size :   "/>

        <ImageButton
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:background="@drawable/ic_sub"
            android:id="@+id/sub_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:id="@+id/text_font_size"/>

        <ImageButton
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:background="@drawable/ic_add"
            android:id="@+id/add_button"/>


    </LinearLayout>


